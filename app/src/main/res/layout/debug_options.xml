<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_debug">

    <ScrollView
        android:id="@+id/debug_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:labelFor="@id/debug_music_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding"
                android:text="Music" />

            <Spinner
                android:id="@+id/debug_music_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding" />

            <TextView
                android:labelFor="@id/debug_sound_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding"
                android:text="Sound Effect" />

            <Spinner
                android:id="@+id/debug_sound_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding" />

            <TextView
                android:labelFor="@id/debug_mesh_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding"
                android:text="Mesh" />

            <Spinner
                android:id="@+id/debug_mesh_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding" />

            <TextView
                android:labelFor="@id/debug_texture_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding"
                android:text="Texture" />

            <Spinner
                android:id="@+id/debug_texture_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding" />

            <TextView
                android:labelFor="@+id/debug_material_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding"
                android:text="Material" />

            <Spinner
                android:id="@+id/debug_material_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding" />

            <TextView
                android:labelFor="@id/debug_fog_dial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding"
                android:text="Fog" />

            <SeekBar
                android:id="@+id/debug_fog_dial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:padding="@dimen/view_padding"
                android:max="100" />

        </LinearLayout>

    </ScrollView>

</merge>