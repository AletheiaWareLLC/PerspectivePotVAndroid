<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory android:title="@string/preference_game_title">

        <androidx.preference.SwitchPreferenceCompat
            android:key="@string/preference_puzzle_outline_key"
            android:title="@string/preference_puzzle_outline_title"
            android:icon="@drawable/outline"
            android:defaultValue="true" />

        <androidx.preference.SwitchPreferenceCompat
            android:key="@string/preference_puzzle_music_key"
            android:title="@string/preference_puzzle_music_title"
            android:icon="@drawable/music"
            android:defaultValue="true" />

        <androidx.preference.SwitchPreferenceCompat
            android:key="@string/preference_puzzle_sound_key"
            android:title="@string/preference_puzzle_sound_title"
            android:icon="@drawable/sound"
            android:defaultValue="true" />

        <androidx.preference.SwitchPreferenceCompat
            android:key="@string/preference_puzzle_vibration_key"
            android:title="@string/preference_puzzle_vibration_title"
            android:icon="@drawable/vibration"
            android:defaultValue="true" />

        <androidx.preference.Preference
            android:key="@string/preference_clear_progress_key"
            android:summary="@string/preference_clear_progress_description"
            android:icon="@drawable/delete"
            android:title="@string/preference_clear_progress_title" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/preference_about_title">

        <androidx.preference.Preference
            android:key="@string/preference_version_key"
            android:icon="@drawable/info"
            android:title="@string/preference_version_title" />

        <androidx.preference.Preference
            android:key="@string/preference_support_key"
            android:summary="@string/preference_support_description"
            android:icon="@drawable/support"
            android:title="@string/preference_support_title" />

        <androidx.preference.Preference
            android:key="@string/preference_more_key"
            android:summary="@string/preference_more_description"
            android:icon="@drawable/aletheia_ware_llc_logo_small"
            android:title="@string/preference_more_title" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>